{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended"
	],
	"parserOptions": {
		"ecmaVersion": 13,
		"sourceType": "module"
	},
	"rules": {
		"indent": [ "error", "tab", { "SwitchCase": 1, "ignoreComments": true } ],
		"linebreak-style": [ "error", "unix" ],
		"quotes": [ "error", "double" ],
		"semi": [ "error", "never" ],
		"comma-dangle": [ "error", "always-multiline" ],
		"no-unused-vars": "warn",
		"no-inner-declarations": "off",
		"no-undef": "off"
	}
}

